<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rectem_layout"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/ic_recyclercard"
    android:orientation="horizontal"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sfproregular"
            android:text="title name"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/rv_time_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:alpha="0.7"
            android:fontFamily="@font/sfproregular"
            android:text="time indicator"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/rv_activity_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/sfprobold"
            android:text="4,383"
            android:textColor="@color/StepBlue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/rv_activity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:fontFamily="@font/sfproregular"
            android:text="activity text"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/BarChart"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginEnd="10dp" />
</LinearLayout>