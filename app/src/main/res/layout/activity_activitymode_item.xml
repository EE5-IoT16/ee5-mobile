<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rec_layout_activity_mode"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_marginBottom="8dp"
    android:backgroundTint="@android:color/transparent"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/am_date_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfproregular"
            android:text="15/06/2022"
            android:textColor="@color/Grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/am_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:fontFamily="@font/sfproregular"
            android:text="Date"
            android:textColor="@color/Grey"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/am_duration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:fontFamily="@font/sfproregular"
                android:text="Duration:"
                android:textColor="@color/Grey"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/am_duration_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/sfproregular"
                android:text="32min 5sec"
                android:textColor="@color/Grey"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/am_steps_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:fontFamily="@font/sfproregular"
                android:text="Steps:"
                android:textColor="@color/Grey"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/am_steps_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/sfproregular"
                android:text="867"
                android:textColor="@color/Grey"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/am_calories_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:fontFamily="@font/sfproregular"
                android:text="calories:"
                android:textColor="@color/Grey"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/am_calories_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/sfproregular"
                android:text="867"
                android:textColor="@color/Grey"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/am_HeartPoints_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:fontFamily="@font/sfproregular"
                android:text="Heart points:"
                android:textColor="@color/Grey"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/am_HeartPoints_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/sfproregular"
                android:text="867"
                android:textColor="@color/Grey"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/am_distance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:fontFamily="@font/sfproregular"
                android:text="Distance:"
                android:textColor="@color/Grey"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/am_distance_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/sfproregular"
                android:text="1,23"
                android:textColor="@color/Grey"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>