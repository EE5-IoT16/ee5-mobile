<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rec_falls_item"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/ic_recyclercard"
    android:backgroundTint="@color/Beige"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="2">


    <TextView
        android:id="@+id/rv_falls_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/sfproregular"
        android:text="15/03/2022"
        android:textColor="@color/Grey"
        android:textSize="20sp"
        android:layout_gravity="end"
        android:textAlignment="textEnd"/>

    <TextView
        android:id="@+id/rv_falls_divider"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfproregular"
        android:text="-"
        android:textColor="@color/Grey"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/rv_falls_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfproregular"
        android:text="12u44"
        android:textColor="@color/Grey"
        android:textSize="20sp"
        android:layout_weight="1"
        android:textAlignment="textStart"/>


</LinearLayout>